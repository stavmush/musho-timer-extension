{
    "manifest_version": 3,
    "name": "Timer Bar",
    "version": "1.2",
    "description": "A timer bar injected into the top of the current webpage.",
    "permissions": ["scripting", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Timer Bar"
    },
    "web_accessible_resources": [
      {
        "resources": ["timer.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  